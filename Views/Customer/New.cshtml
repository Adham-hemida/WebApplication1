@model Customer
<form class="border border-2" method="post" asp-action="saveNew" asp-controller="Customer">
	<div asp-validation-summary="All"></div>
	<div class="form-group">
		<label class="form-label" asp-for="Name"></label>
		<!-- <input type="text" id="name" name="Name"  value="@Model?.Name" class="form-control" />  -->
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="Email"></label>
		<!-- <input type="text" id="Email" name="Email" value="@Model?.Email" class="form-control" />-->
		<input asp-for="Email" class="form-control" />
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="Address"></label>
		<!--	<input type="text" id="Adress" name="Adress" value="@Model?.Address" class="form-control" /> -->
		<input asp-for="Address" class="form-control" />
		<span asp-validation-for="Address" class="text-danger"></span>
	</div>
	
	<div class="form-group">
		<label class="form-label" asp-for="PhoneNumber"></label>
		<!--<input type="number" id="Age" name="Age" value="@Model?.PhoneNumber"  class="form-control" />-->
		<input asp-for="PhoneNumber" class="form-control" />
		<span asp-validation-for="PhoneNumber" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label class="form-label" asp-for="Orders"></label>
		<!--<input type="number" id="Age" name="Age" value="@Model?.Orders"  class="form-control" />-->
		<input asp-for="Orders" class="form-control" />
		<span asp-validation-for="Orders" class="text-danger"></span>
	</div>
	
	<button type="submit">Save</button>

</form>
@* //عشان ال client side validation *@
@section Scripts {
	@* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@ @* // ده موجود في layout // لو مش موجود هحطه *@
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
