@model List<Customer>

<a asp-controller="Customer" asp-action="New" class="btn btn-primary mb-2">New Customer</a>
<table class="table table-bordered">
	<tr>
		
		<th>Name</th>
		<th>Email</th>
		<th>PhoneNumber</th>
		<th>Adress</th>
		
		<th>Deletes</th>

	</tr>
	@foreach (var employee in Model)
	{
		<tr>
			<td>@employee.Name</td>
			<td>@employee.Email</td>
			<td>@employee.PhoneNumber</td>
			<td>@employee.Address</td>		
			@* class="btn btn-primary mb-2 *@
			
			<td><a asp-controller="Customer" asp-action="Delete" asp-route-id="@employee.CustomerID"> <button type="button" class="btn btn-danger"> Delete</button></a></td>
		</tr>	@* class="btn btn-primary mb-2" *@
	}
</table>

